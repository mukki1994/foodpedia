<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        app:hintTextAppearance="@style/MyAppearance"
        android:textColorHint="@color/black_opacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/black_opacity"
            android:hint="Email Address"
            android:drawablePadding="12dp"
            android:paddingBottom="22dp"
            android:textCursorDrawable="@null"
            android:drawableLeft="@drawable/ic_email_icon"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>
    <ImageView
        android:id="@+id/image_hide_password"
        android:layout_width="18dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_hide_password"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/textInputPassword"
        app:layout_constraintBottom_toBottomOf="@id/textInputPassword"
        app:layout_constraintEnd_toEndOf="@id/textInputPassword"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:hintTextAppearance="@style/MyAppearance"
        android:textColorHint="@color/black_opacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputEmail">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/black_opacity"
            android:hint="Password"
            android:drawablePadding="12dp"
            android:paddingBottom="22dp"
            android:textCursorDrawable="@null"
            android:drawableLeft="@drawable/ic_lock_password"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:text="Forgot password?"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/button_signin"
        app:layout_constraintEnd_toStartOf="@+id/button_signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_signin" />
    <Button
        android:id="@+id/button_signin"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Sign in"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_button"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@id/textInputPassword"
        app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"/>
    <TextView
        android:id="@+id/text_signin_with"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Or Sign in with"
        android:textColor="@color/dark_red"
        android:textSize="12sp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/text_forgot_password"/>
    <ImageView
        android:id="@+id/image_facebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_facebook"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/text_signin_with"
        app:layout_constraintBottom_toBottomOf="@id/text_signin_with"/>

    <ImageView
        android:id="@+id/image_google"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_google_icon"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/image_facebook"
        app:layout_constraintTop_toTopOf="@id/image_facebook"
        app:layout_constraintBottom_toBottomOf="@id/image_facebook"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>