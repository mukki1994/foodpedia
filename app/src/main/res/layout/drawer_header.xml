<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/ic_bg_user_profile">

    <ImageView
        android:id="@+id/image_user_profile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_restaurent_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_restaurant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Uncle Jack's Steakhouse"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/image_user_profile"
        app:layout_constraintStart_toEndOf="@id/image_user_profile"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/image_location"
        android:layout_width="15dp"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:tint="@color/white_text_opacity"
        android:src="@drawable/ic_location_sign"
        app:layout_constraintStart_toStartOf="@id/text_restaurant_name"
        app:layout_constraintTop_toBottomOf="@id/text_restaurant_name"/>
    <TextView
        android:id="@+id/text_restaurant_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quark Media, sec 8, Chandigarh"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_restaurant_name"
        app:layout_constraintStart_toEndOf="@id/image_location"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/image_rating"
        android:layout_width="15dp"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_star_second"
        app:layout_constraintStart_toStartOf="@id/image_location"
        app:layout_constraintTop_toBottomOf="@id/image_location"/>
    <TextView
        android:id="@+id/text_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4.9"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_restaurant_address"
        app:layout_constraintStart_toEndOf="@id/image_rating"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>