<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabText" parent="Base.Widget.Design.TabLayout">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="colorAccent">@color/black_opacity</item>
        <item name="colorControlNormal">@color/black_opacity</item>
        <item name="colorControlActivated">@color/black_opacity</item>

    </style>

</resources>
